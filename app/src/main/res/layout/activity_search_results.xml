<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/search_swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/pagination_loading">

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:id="@+id/search_recycler">
    </android.support.v7.widget.RecyclerView>
</android.support.v4.widget.SwipeRefreshLayout>
    <LinearLayout
        android:id="@+id/vg_no_search_results_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:alpha="0.6"
        android:orientation="vertical"
        android:visibility="gone">
        <ImageView
            android:id="@+id/favorites_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/ic_not_found"
            android:layout_gravity="center" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:text="@string/no_search_results"/>
    </LinearLayout>

    <ProgressBar
            android:id="@+id/pagination_loading"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:layout_marginBottom="0dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"
            android:progressDrawable="@drawable/progress"/>
    </RelativeLayout>
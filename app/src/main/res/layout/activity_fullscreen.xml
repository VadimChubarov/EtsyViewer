<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#000000"
             tools:context="com.example.vadim.EtsyViewer.FullscreenActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <com.example.vadim.EtsyViewer.ExtendedViewPager
            android:id="@+id/full_screen_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </com.example.vadim.EtsyViewer.ExtendedViewPager>

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fullscreen_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent_black">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button android:id="@+id/fullscren_toolbar_download"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/ic_baseline_save_alt_24px"/>
            <Button android:id="@+id/fullscren_toolbar_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/ic_baseline_arrow_back_24px"/>
            <TextView
                android:id="@+id/fullscreen_toolbar_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="100dp"
                android:layout_below="@id/fullscren_toolbar_back"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="15dp"
                android:textColor="@android:color/white"
                android:maxLines="6"
                android:ellipsize="end"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
</FrameLayout>
